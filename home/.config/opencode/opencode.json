{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "external_directory": {
      "*": "ask",
      "~/.config/opencode/*": "allow",
      "~/.dotfiles/home/.config/opencode/*": "allow",
      "~/Code/personal/opencode/*": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny",
      ".dev.vars": "ask"
    }
  },
  "theme": "catppuccin-macchiato",
  "keybinds": {
    "leader": "ctrl+o",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_delete_to_line_start": "none",
    "input_delete": "delete,shift+delete"
  },
  "plugin": [
    "opencode-anthropic-auth"
  ],
  "mcp": {
    "backstage": {
      "type": "remote",
      "url": "https://backstage.mcp.cfdata.org/mcp",
      "enabled": false
    },
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "enabled": false
    },
    "elasticsearch": {
      "type": "remote",
      "url": "https://elasticsearch.mcp.cfdata.org/mcp",
      "enabled": false
    },
    "gitlab": {
      "type": "remote",
      "url": "https://gitlab.mcp.cfdata.org/mcp",
      "enabled": false
    },
    "jira": {
      "type": "remote",
      "url": "https://jira.mcp.cfdata.org/mcp",
      "enabled": false
    },
    "townlake": {
      "type": "remote",
      "url": "https://mcp.townlake.cfdata.org/mcp",
      "enabled": false
    },
    "wiki": {
      "type": "remote",
      "url": "https://wiki.mcp.cfdata.org/mcp",
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "opensrc": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "opensrc-mcp"
      ],
      "enabled": true
    },
    "overseer": {
      "type": "local",
      "command": ["os", "mcp"],
      "enabled": true
    }
  }
}
